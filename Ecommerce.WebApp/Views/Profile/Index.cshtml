
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="@Url.Content("~/Admin/assets/notifications.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/admin/Assets/profileedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Admin/assets/alert.js")" type="text/javascript"></script>
    <script>

        profileedit.currentUserName = "@User.Identity.Name";
        var baseUrl = "@Url.Content("~/")";
        profileedit.load();
    </script>
}

<div id="profileedit">
    <div class="row">
        <div class="col-md-3">
            <div class="portlet light profile-sidebar-portlet bordered">
                <div class="profile-userpic text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="img-responsive" alt="">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name"> {{profileModel.profile.userName}} </div>
                    <div class="row">
                        <div class="col-md-7 info-profile">
                            <label><i class="fa fa-times"></i>Ngày tham gia:</label>
                            <label><i class="fa fa-map-marker"></i>Địa chỉ:</label>
                            <label><i class="fa fa-shopping-bag"></i>Tổng SP đang bán:</label>
                        </div>
                        <div class="col-md-5 info-profile">
                           
                        </div>
                    </div>
                   
                </div>
               
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="#">
                                
                            </a>
                        </li>
                        <li>
                            <a href="#">
                               
                            </a>
                        </li>
                        <li>
                            <a href="#">
                               
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="portlet light bordered">
                <div class="portlet-title tabbable-line">
                    <div class="caption caption-md">
                        <i class="icon-globe theme-font hide"></i>
                        <span class="caption-subject font-blue-madison bold uppercase">Your info</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-xl-12">
                            <!-- Section: Live preview -->
                            <section class="mx-2 pb-3">

                                <ul class="nav nav-tabs md-tabs" id="myTabMD" role="tablist">
                                    <li class="nav-item waves-effect waves-light">
                                        <a class="nav-link active" id="home-tab-md" data-toggle="tab" href="#home-md" role="tab" aria-controls="home-md" aria-selected="true">Thông tin cá nhân</a>
                                    </li>
                                    <li class="nav-item waves-effect waves-light">
                                        <a class="nav-link" id="profile-tab-md" data-toggle="tab" href="#profile-md" role="tab" aria-controls="profile-md" aria-selected="false">Sản phẩm đăng bán</a>
                                    </li>
                                    <li class="nav-item waves-effect waves-light">
                                        <a class="nav-link" id="contact-tab-md" data-toggle="tab" href="#contact-md" role="tab" aria-controls="contact-md" aria-selected="false">Sản phẩm mua</a>
                                    </li>
                                </ul>
                                <div class="tab-content card pt-5" id="myTabContentMD">
                                    <div class="tab-pane fade show active" id="home-md" role="tabpanel" aria-labelledby="home-tab-md">
                                        <form class="form p-4" action="##" method="post" id="registrationForm">
                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="first_name"><h4>User name</h4></label>
                                                    <input type="text" v-model="profileModel.profile.userName" class="form-control" name="first_name" id="first_name" placeholder="first name" title="enter your first name if any.">
                                                </div>
                                            </div>
                                           
                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="phone"><h4>Phone</h4></label>
                                                    <input type="text" v-model="profileModel.profile.phoneNumber" class="form-control" name="phone" id="phone" placeholder="enter phone" title="enter your phone number if any.">
                                                </div>
                                            </div>

                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="email"><h4>Email</h4></label>
                                                    <input type="email" v-model="profileModel.profile.email" class="form-control" name="email" id="email" placeholder="you@email.com" title="enter your email.">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="email"><h4>Address</h4></label>
                                                    <input type="email" class="form-control" id="location" placeholder="somewhere" title="enter a location">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="password"><h4>Password</h4></label>
                                                    <input type="password" class="form-control" name="password" id="password" placeholder="password" title="enter your password.">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="col-xs-6">
                                                    <label for="password2"><h4>Verify</h4></label>
                                                    <input type="password" class="form-control" name="password2" id="password2" placeholder="password2" title="enter your password2.">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-xs-12">
                                                    <br>
                                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="profile-md" role="tabpanel" aria-labelledby="profile-tab-md">
                                        <div class="row">
                                            <div v-for="product in profileModel.products" class="col-lg-4 col-md-6 mb-4">
                                                <div class="card h-100">
                                                    <i class="far fa-heart"></i>
                                                    <a :href="'/productdetail/' + product.id">
                                                        <img v-if="product.images.length>0" style="width:255px; height:255px" class="card-img-top p-3" :src="product.images[0].imagePath" />
                                                    </a>
                                                    <div class="card-body">
                                                        <a class="card-title text-success" href="">{{ product.productuser }}</a>
                                                        <h6 class="card-title text-dark">{{ product.name }}</h6>
                                                        <p class="card-text">{{ product.detail }}</p>
                                                        <p class="card-text text-danger">{{ product.price }}</p>
                                                    </div><div class="row">
                                                        <div class="col-md-6">
                                                            <span class="card-text"><i class="fa fa-map-marker text-danger"></i> {{ product.provinceName }}-{{ product.districtName }}</span>
                                                        </div><div class="col-md-6">
                                                            <span class="card-text">{{ product.stateName }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <div class="tab-pane fade" id="contact-md" role="tabpanel" aria-labelledby="contact-tab-md">
                                        <div class="row">
                                            <div v-for="product in profileModel.buyProducts" class="col-lg-4 col-md-6 mb-4">
                                                <div class="card h-100">
                                                    <i class="far fa-heart"></i>
                                                    <a :href="'/productdetail/' + product.id">
                                                        <img v-if="product.images.length>0" style="width:255px; height:255px" class="card-img-top p-3" :src="product.images[0].imagePath" />
                                                    </a>
                                                    <div class="card-body">
                                                        <a class="card-title text-success" href="">{{ product.productuser }}</a>
                                                        <h6 class="card-title text-dark">{{ product.name }}</h6>
                                                        <p class="card-text">{{ product.detail }}</p>
                                                        <p class="card-text text-danger">{{ product.price }}</p>
                                                    </div><div class="row">
                                                        <div class="col-md-6">
                                                            <span class="card-text"><i class="fa fa-map-marker text-danger"></i> {{ product.provinceName }}-{{ product.districtName }}</span>
                                                        </div><div class="col-md-6">
                                                            <span class="card-text">{{ product.stateName }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </section>
                            <!-- Section: Live preview -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
